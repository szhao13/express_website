extends layout

block content
	-data = data || {}

	if errors
		u1
			for error in errors
				li= error.msg
	form(action="." method="POST")
		label(for="name") Name:
		input(
			type="text"
			id="name"
			name="name"
			class="form-control"
			value=data.name
		)

		label(for="email") Email:
		input(
			type="email"
			id="email"
			name="email"
			value=data.email
		)

		input(
			type="submit" 
			value="Submit"
			class="btn btn-lg btn-primary btn-block"
		)

		input(
			type="submit"
			value="Submit"
			class="btn btn-lg btn-primary btn-block"
		)